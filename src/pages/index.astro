---
import Galery from "@/components/Galery.astro";
import Basic from "@/layouts/Basic.astro";
import Header from "@/components/Header.astro";
import Logos from "@/components/Logos.astro";
import Footer from "@/components/Footer.astro";
---

<Basic
  title="ECA Teatro"
  description="Información sobre El grupo amateur ECA Teatro, obras, espectáculos, contacto, etc."
  keywords="teatro, teatro amateur, espectáculos"
  ogImage="https://ecateatro.es/IMG20210508183012.6c0fb45d.jpeg"
>
  <Galery />
  <Header />
  <Logos />
  <Footer />
</Basic>
<style lang="scss">
  #logoFeteas {
    position: absolute;
    bottom: 10px;
    right: 10px;
    cursor: pointer;
    img {
      width: 80px;
    }
    @media (max-width: 425px) {
      left: 10px;
      right: auto;
      bottom: 170px;
    }
  }

  #logo_escena_amateur {
    position: absolute;
    bottom: 10px;
    right: 100px;
    img {
      width: 80px;
    }
    cursor: pointer;
    @media (max-width: 425px) {
      left: 10px;
      right: auto;
      bottom: 120px;
    }
  }
</style>
